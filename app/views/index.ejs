<% include header %>
		<div class="content-body">
			<div class="container">
				<div class="row">
					<main class="col-md-8">
					<% for(i=0; i< articles.length; i++) {%>  
						<article class="post post-1">
							<header class="entry-header">
								<h1 class="entry-title">
									<a href="single.html"><%= articles[i].articles_title %></a>
								</h1>
								<div class="entry-meta">
									<span class="post-category"><a href="#"><%= articles[i].articles_category %></a></span>
			
									<span class="post-date"><a href="#"><time class="entry-date" datetime="<%= articles[i].createtime.toLocaleDateString() %>"><%= articles[i].createtime.toLocaleDateString() %></time></a></span>
			
									<span class="post-author"><a href="#"><%= articles[i].author %></a></span>
			
									<span class="comments-link"><a href="#">4 Comments</a></span>
								</div>
							</header>
							<div class="entry-content clearfix">
								<p><%= articles[i].articles_text.substring(0,100) %></p>
								<div class="read-more cl-effect-14">
									<a href="#" class="more-link">Continue reading <span class="meta-nav">â†’</span></a>
								</div>
							</div>
						</article>
					<% } %> 
						
					</main>
					<aside class="col-md-4">
						<div class="widget widget-recent-posts">		
							<h3 class="widget-title">Hot Posts</h3>		
							<ul>
								<li>
									<a href="#">Adaptive Vs. Responsive Layouts And Optimal Text Readability</a>
								</li>
								<li>
									<a href="#">Web Design is 95% Typography</a>
								</li>
								<li>
									<a href="#">Paper by FiftyThree</a>
								</li>
							</ul>
						</div>
						<div class="widget widget-archives">		
							<h3 class="widget-title">Archives</h3>		
							<ul>
								<li>
									<a href="#">November 2014</a>
								</li>
								<li>
									<a href="#">September 2014</a>
								</li>
								<li>
									<a href="#">January 2013</a>
								</li>
							</ul>
						</div>

						<div class="widget widget-category">		
							<h3 class="widget-title">Category</h3>		
							<ul>
							<% for(i=0; i< categorys.length; i++) {%> 
								<li>
									<a href="<%= categorys[i].categorys_url %>"><%= categorys[i].categorys_name %></a>
								</li>
							<% } %>
								
							</ul>
						</div>
					</aside>
				</div>
			</div>
		</div>
		<% include footer %>
		
